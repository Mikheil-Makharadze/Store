@model List<OrderDTO>

@{
    ViewData["Title"] = "All orders";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>List of all your orders</h4>
        </p>

        <table class="table">
            <thead>
                <tr>
                    <th>Order Date </th>
                    <th>Total </th>
                    <th>User </th>
                    <th>Items</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td class="align-middle">@order.OrderDate</td>
                        <td class="align-middle">@order.Subtotal</td>
                        <td class="align-middle">@order.UserEmail</td>
                        <td class="align-middle">
                            <ul style="list-style-type:none">
                                @foreach (var item in order.OrderItems)
                                {
                                    <li>
                                        <div class="alert alert-info" role="alert">
                                            <span class="badge bg-success">@item.Amount</span>
                                            <span class="badge bg-success">@item.Price</span>
                                            <div class="col-md-4">
                                                <img class="border-info rounded-circle" src="@item.Product.Image" style="max-width: 100px" />
                                                <br />
                                                <a asp-controller="Game" asp-action="Details" asp-route-id="@item.Product.Id">@item.Product.Name</a>
                                            </div>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>