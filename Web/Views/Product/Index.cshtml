@model IEnumerable<ProductDTO>
@{
    ViewData["Title"] = "List of Games";
}

<br />
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Name
                                    @if (User.IsInRole("admin") || User.IsInRole("employee"))
                                    {
                                        <a class="text-white float-right" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                                        <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square mr-3 "></i></a>
                                    }
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.Image" width="100%" alt="@item.Name">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text"><b>Decription: </b>@item.Description</p>
                            @if (item.Price == 0)
                            {
                                <p class="card-text"><b>Price: </b>Free</p>
                            }
                            else
                            {
                                <p class="card-text"><b>Price: </b>@item.Price</p>
                            }
                            <p class="card-text"> <b>category: </b>
                            @foreach(var items in item.Categories)
                            {
                                    <a asp-controller="Category" asp-action="Details" asp-route-id="@item.Id">@items.Name </a>
                            }
                            </p>
                            
                        </div>
                     </div>
        
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Show Details
                                </a>
                                @*<a class="btn btn-success text-white @((DateTime.Now > item.EndDate) ? "disabled" : "")"
                            asp-controller="Orders"
                            asp-action="AddItemToShoppingCart"
                            asp-route-id="@item.Id">
                            <i class="bi bi-cart-plus"></i> Add to Cart (Price @item.Price.ToString("c"))
                            </a>*@
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@await Html.PartialAsync("_CreateItem", "Product")
